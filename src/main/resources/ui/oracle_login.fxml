<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox fx:id="sqlServerLoginBox" alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308"
      maxWidth="1.7976931348623157E308" spacing="20.0" styleClass="connection-box" stylesheets="@../css/theme-1.css"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.analyzer.controllers.OracleLogin">
    <children>
        <HBox alignment="CENTER" prefHeight="92.0" prefWidth="430.0" styleClass="hbox-level-2">
            <children>
                <Label styleClass="label-level-2" text="ORACLE DB LOGIN">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Label>
            </children>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </HBox>
        <TextField fx:id="userId" maxHeight="45.0" maxWidth="-Infinity" minHeight="45.0" minWidth="-Infinity"
                   prefHeight="45.0" prefWidth="400.0" promptText="User ID"/>
        <PasswordField fx:id="password" maxHeight="45.0" maxWidth="-Infinity" minHeight="45.0" minWidth="-Infinity"
                       prefHeight="45.0" prefWidth="400.0" promptText="Password"/>
        <TextField fx:id="host" layoutX="20.0" layoutY="122.0" maxHeight="-Infinity" maxWidth="-Infinity"
                   minHeight="-Infinity" minWidth="-Infinity" prefHeight="45.0" prefWidth="400.0"
                   promptText="Database Host"/>
        <TextField fx:id="port" layoutX="20.0" layoutY="189.0" maxHeight="-Infinity" maxWidth="-Infinity"
                   minHeight="-Infinity" minWidth="-Infinity" prefHeight="45.0" prefWidth="400.0" promptText="Port"/>
        <HBox alignment="CENTER_RIGHT" prefHeight="45.0" prefWidth="400.0" spacing="50.0">
            <children>
                <RadioButton fx:id="serviceRadioBtn" mnemonicParsing="false" selected="true" text="SERVICE"
                             textFill="#faab1a">
                    <toggleGroup>
                        <ToggleGroup fx:id="radioButtons"/>
                    </toggleGroup>
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </RadioButton>
                <RadioButton fx:id="sidRadioBtn" layoutX="0.0" layoutY="10.0" mnemonicParsing="false" text="SID"
                             textFill="#faab1a" toggleGroup="$radioButtons">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </RadioButton>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </HBox>
        <TextField fx:id="serviceOrSid" layoutX="21.0" layoutY="343.0" maxHeight="-Infinity" maxWidth="-Infinity"
                   minHeight="-Infinity" minWidth="-Infinity" prefHeight="45.0" prefWidth="400.0"
                   promptText="Service / SID "/>
        <Button fx:id="connectBtn" mnemonicParsing="false" onAction="#connectToDb" styleClass="click-button"
                text="CONNECT">
            <VBox.margin>
                <Insets left="200.0"/>
            </VBox.margin>
        </Button>
        <VBox fx:id="statusBox" alignment="TOP_CENTER" prefHeight="298.0" prefWidth="410.0" spacing="20.0">
            <children>
                <HBox>
                    <children>
                        <Label fx:id="status" prefHeight="164.0" prefWidth="410.0" styleClass="error-message"
                               wrapText="true"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
